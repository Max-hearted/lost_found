
<!--pages/my/my.wxml-->
<view class="body">
  <view class="userInfo">
    <view class="avatar">
      <image src="{{userInfo.avatarUrl}}"></image>
    </view>
    <view class="user">
      <text class="nickname">{{userInfo.nickName}}</text>
      <text class="gender">{{userInfo.gender==1 ? '男':'女'}}</text>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <navigator url="mynotice/mynotice" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="/images/qishi.png" class="icon"></image>
      </view>
      <view class="weui-cell__bd">我的启事</view>
    </navigator>
    <navigator url="collection/collection" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="/images/shoucang.png" class="icon"></image>
      </view>
      <view class="weui-cell__bd">我的收藏</view>
    </navigator>
    <view class="weui-cell weui-cell_access" hover-class="weui-cell_active" bindtap="bindSettingTap">
      <view class="weui-cell__hd">
        <image src="/images/setting.png" class="icon"></image>
      </view>
      <view class="weui-cell__bd">权限设置</view>
    </view>
    
    <!--<navigator url="message/message" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="/images/xiaoxi.png" class="icon"></image>
      </view>
      <view class="weui-cell__bd">消息</view>
    </navigator>-->
  </view>
</view>