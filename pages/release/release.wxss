/* pages/release/release.wxss */

.body {
  font-size: 14pt;
}

.section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  background-color: #fff;
  vertical-align: middle;
  height: 60rpx;
  line-height: 60rpx;
}

input {
  background-color: #fff;
  height: 60rpx;
  width: 100%;
  padding: 10rpx 20rpx;
}

textarea {
  width: 100%;
  padding: 10rpx 20rpx;
  background-color: #fff;
}

.leftArea {
  color: #000;
  background: #fff;
}

.rightArea {
  color: #888;
}

.block {
  height: 20rpx;
}

.line {
  height: 3rpx;
}

.rightInput {
  width: 500rpx;
  text-align: right;
  background: none;
  height: 100%;
  line-height: 80rpx;
}

.btn {
  margin: 100rpx 30rpx;
  background-color: #888;
}

.imageArea {
  width: 100%;
  min-height: 350rpx;
  padding: 10rpx;
}

image {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
}
